QProgressDialog QPushButton {
    color: #fff;
    background-color: transparent;
    border-style: solid;
    border-width: 3px;
    border-radius: 10px;
    font-size: 15px;
    height:20px;
    width: 100px;
}

QProgressDialog QLabel {
    font-size: 15px;
}
 
QProgressDialog QPushButton:hover {
    background-color: #00BCff;
}
 
QProgressDialog QPushButton:pressed {
    border-color: #00BCff;
    color: #00BCff;
}